-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag  movies_path, :method => :get, id: "ratings_form"  do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag id: "ratings_#{rating}" "ratings[#{rating}]"
  = submit_tag#ratings_submit 'Refresh'


%table#movies
  %thead
    %tr
      %th
        %a#title_header{ :href => '?sorted=title_sorted'} Movie Title
      %th Rating
      %th 
        %a#release_date_header{:href => '?sorted=release_date_sorted'} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
